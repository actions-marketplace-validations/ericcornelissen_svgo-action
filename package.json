{
  "name": "svgo-action",
  "version": "3.0.3",
  "private": true,
  "description": "Automatically run SVGO with GitHub Actions",
  "homepage": "https://github.com/marketplace/actions/svgo-action",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.cjs",
  "scripts": {
    "audit": "npm audit",
    "audit:prod": "npm audit --omit dev",
    "build": "rollup --config rollup.config.js",
    "clean": "run-p clean:reports clean:temp",
    "clean:reports": "git clean --force -X ./_reports",
    "clean:temp": "git clean --force -X ./.cache ./.temp",
    "coverage": "npm run coverage:all",
    "coverage:all": "npm run test:all -- --coverage",
    "coverage:unit": "npm run test:unit -- --coverage",
    "coverage:integration": "npm run test:integration -- --coverage",
    "format": "run-p format:js format:md",
    "format:js": "npm run lint:js -- --fix",
    "format:md": "npm run lint:md -- --fix",
    "lint": "run-p lint:js lint:md lint:ws",
    "lint:js": "eslint . --report-unused-disable-directives --ext .js,.ts",
    "lint:md": "markdownlint --dot --ignore-path .gitignore .",
    "lint:sh": "shellcheck -e SC1090,SC1091,SC2155 script/*.sh script/hooks/*.sh script/hooks/pre-*",
    "lint:ws": "editorconfig-checker -disable-max-line-length",
    "prepare": "is-ci || husky install script/hooks",
    "test": "npm run test:all",
    "test:all": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/integration",
    "test:e2e": "act --job test-e2e",
    "test:mutation": "stryker run stryker.config.js",
    "vet": "depcheck && unimported"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ericcornelissen/svgo-action"
  },
  "bugs": {
    "url": "https://github.com/ericcornelissen/svgo-action/issues"
  },
  "author": {
    "name": "Eric Cornelissen",
    "email": "ericornelissen@gmail.com",
    "url": "https://ericcornelissen.dev/"
  },
  "keywords": [
    "actions",
    "node",
    "svgo"
  ],
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "5.1.1",
    "eval": "0.1.8",
    "import-cwd": "3.0.0",
    "js-yaml": "4.1.0",
    "minimatch": "5.1.0",
    "svgo-v2": "npm:svgo@2.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@rollup/plugin-commonjs": "22.0.2",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "14.1.0",
    "@rollup/plugin-typescript": "8.5.0",
    "@stryker-mutator/core": "6.2.2",
    "@stryker-mutator/jest-runner": "6.2.2",
    "@stryker-mutator/typescript-checker": "6.2.2",
    "@types/jest": "29.1.1",
    "@types/jest-when": "3.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/minimatch": "5.1.2",
    "@types/node": "16.11.62",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "depcheck": "1.4.3",
    "editorconfig-checker": "4.0.2",
    "eslint": "8.24.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.0.4",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-security": "1.5.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "29.1.2",
    "jest-when": "3.5.1",
    "markdownlint-cli": "0.32.2",
    "npm-run-all": "4.1.5",
    "rollup": "2.79.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-jest": "29.0.3",
    "typescript": "4.8.4",
    "unimported": "1.22.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.1.2"
  }
}
